{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "types/**/*.d.ts"
  ]
}